<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".fragment.EvaluationFragment">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="10dp">
            <TextView
                android:id="@+id/title_this_week"
                android:gravity="center_horizontal"
                android:textSize="24sp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textStyle="bold"
                android:textColor="@color/black"
                android:shadowColor="@android:color/holo_blue_light"
                android:text="本周总结"
                app:layout_constraintTop_toTopOf="parent"/>

            <ImageView
                android:id="@+id/cut_off_1"
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                app:layout_constraintTop_toBottomOf="@id/title_this_week"
                android:background="@android:color/holo_blue_dark"
                tools:ignore="MissingConstraints" />

            <TextView
                android:id="@+id/text_content"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:lineBreakStyle="loose"
                android:text="自我评价内容"
                app:layout_constraintTop_toBottomOf="@+id/cut_off_1"/>.

            <ImageView
                android:id="@+id/cut_off_2"
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                app:layout_constraintTop_toBottomOf="@id/text_content"
                android:background="@android:color/holo_blue_dark"
                tools:ignore="MissingConstraints" />

            <GridLayout
                android:id="@+id/self_comment_month_picker"
                android:layout_width="fill_parent"
                android:layout_height="0dp"
                app:layout_constraintVertical_weight="1"
                app:layout_constraintTop_toBottomOf="@+id/cut_off_2"
                android:columnCount="3"
                android:rowCount="4"
                android:padding="4dp"
                android:orientation="horizontal"

                tools:ignore="MissingConstraints">

                <TextView
                    android:id="@+id/Jan"
                    android:layout_columnWeight="1"
                    android:gravity="center"
                    android:fadingEdge="none"
                    android:text="Jan"
                    android:textSize="32sp"
                    android:textColor="#2a6d6d"/>.
                <TextView
                    android:id="@+id/Feb"
                    android:layout_columnWeight="1"
                    android:gravity="center"
                    android:text="Feb"
                    android:textSize="32sp"
                    android:textColor="#2f9adc"/>.
                <TextView
                    android:id="@+id/Mar"
                    android:layout_columnWeight="1"
                    android:gravity="center"
                    android:text="Mar"
                    android:textSize="32sp"
                    android:textColor="#579eff"/>.

                <TextView
                    android:id="@+id/Apr"
                    android:layout_columnWeight="1"
                    android:gravity="center"
                    android:text="Apr"
                    android:textSize="32sp"
                    android:textColor="#2a6d6d"/>.
                <TextView
                    android:id="@+id/May"
                    android:layout_columnWeight="1"
                    android:gravity="center"
                    android:text="May"
                    android:textSize="32sp"
                    android:textColor="#2f9adc"/>.
                <TextView
                    android:id="@+id/Jun"
                    android:layout_columnWeight="1"
                    android:gravity="center"
                    android:text="Jun"
                    android:textSize="32sp"
                    android:textColor="#579eff"/>.

                <TextView
                    android:id="@+id/Jul"
                    android:layout_columnWeight="1"
                    android:gravity="center"
                    android:text="Jul"
                    android:textSize="32sp"
                    android:textColor="#2a6d6d"/>.
                <TextView
                    android:id="@+id/Aug"
                    android:layout_columnWeight="1"
                    android:gravity="center"
                    android:text="Aug"
                    android:textSize="32sp"
                    android:textColor="#2f9adc"/>.
                <TextView
                    android:id="@+id/Sep"
                    android:layout_columnWeight="1"
                    android:gravity="center"
                    android:text="Sep"
                    android:textSize="32sp"
                    android:textColor="#579eff"/>.
                <TextView
                    android:id="@+id/Oct"
                    android:layout_columnWeight="1"
                    android:gravity="center"
                    android:text="Oct"
                    android:textSize="32sp"
                    android:textColor="#2a6d6d"/>.
                <TextView
                    android:id="@+id/Nov"
                    android:layout_columnWeight="1"
                    android:gravity="center"
                    android:text="Nov"
                    android:textSize="32sp"
                    android:textColor="#2f9adc"/>.
                <TextView
                    android:id="@+id/Dec"
                    android:layout_columnWeight="1"
                    android:gravity="center"
                    android:text="Dec"
                    android:textSize="32sp"
                    android:textColor="#579eff"/>.
            </GridLayout>

        </androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>