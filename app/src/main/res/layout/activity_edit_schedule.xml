<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ViewByWeekActivity">

    <androidx.appcompat.widget.Toolbar
        android:layout_gravity="top"
        android:id="@+id/navigation_bar_in_Frag"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent">

    </androidx.appcompat.widget.Toolbar>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0sp"
        android:fillViewport="true"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="10sp"
            android:layout_gravity="center"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="70sp">

            <EditText
                android:id="@+id/add_plan"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10sp"
                android:hint="安排日程"
                android:textSize="25sp"
                android:inputType="textCapCharacters"
                android:minHeight="48sp"
                app:layout_constraintTop_toTopOf="parent"
                tools:layout_editor_absoluteX="10sp"/>


            <TextView
                android:id="@+id/textView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="全部标签"
                app:layout_constraintTop_toBottomOf="@+id/add_plan"
                tools:ignore="MissingConstraints"/>

            <RadioGroup
                android:id="@+id/tag_radio"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/add_pic"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/add_plan">

                <RadioButton
                    android:layout_width="0sp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"/>
<!--                    android:text=""-->


            </RadioGroup>

        </androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>