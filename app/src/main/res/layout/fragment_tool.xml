<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragment.ToolFragment">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/hint"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:textSize="30sp"
        android:text="@string/tool"
        />
    <ImageButton
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:id="@+id/tomato_clock"
        app:layout_constraintTop_toBottomOf="@id/hint"
        app:layout_constraintLeft_toLeftOf="parent"
        android:scaleType="fitCenter"
        android:background="@drawable/tomato_clock"
        />
    <ImageButton
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:id="@+id/filter"
        app:layout_constraintTop_toBottomOf="@id/hint"
        android:layout_marginLeft="10dp"
        app:layout_constraintLeft_toRightOf="@id/tomato_clock"
        android:scaleType="fitCenter"
        android:background="@drawable/data_filter"
        />
    <TextView
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:textSize="23sp"
        android:text="@string/tomato_clock"
        app:layout_constraintTop_toBottomOf="@id/tomato_clock"
        app:layout_constraintLeft_toLeftOf="parent"/>
    <TextView
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:textSize="23sp"
        android:text="@string/filter"
        app:layout_constraintTop_toBottomOf="@id/filter"
        android:layout_marginLeft="10dp"
        app:layout_constraintLeft_toRightOf="@id/tomato_clock"
        />


</androidx.constraintlayout.widget.ConstraintLayout>