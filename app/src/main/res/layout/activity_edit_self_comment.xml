<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/constraint"
    android:padding="12dp"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".EditSelfCommentActivity">

    <ImageView
        android:id="@+id/background_image"
        android:layout_width="450dp"
        android:layout_height="450dp"
        app:layout_constraintBottom_toBottomOf="@+id/constraint"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:background="@drawable/time_management_logo_final"
        android:scaleType="center"
        android:alpha="0.3"/>.

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fillViewport="true"
        android:padding="6dp"
        tools:ignore="MissingConstraints">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@android:color/black"
                android:gravity="center"
                android:textSize="24sp"
                android:text="本周总结：（第 ## 周）"/>.

            <ImageView
                android:id="@+id/cut_off"
                android:layout_width="match_parent"
                android:layout_height="3.2dp"
                android:layout_marginTop="16dp"
                app:layout_constraintTop_toBottomOf="@id/title"
                android:background="@android:color/holo_blue_dark"
                tools:ignore="MissingConstraints" />

            <EditText
                android:id="@+id/edit_self_comment"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="24dp"
                app:layout_constraintTop_toBottomOf="@id/cut_off"
                style="@android:style/TextAppearance"
                android:inputType="textMultiLine"
                android:lineSpacingExtra="6dp"
                android:minLines="1"
                android:maxLines="30"
                android:hint="随时记录一周的得与失"/>.

        </androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>

    <LinearLayout
        android:id="@+id/commit_area"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintBottom_toBottomOf="parent">

        <Button
            android:id="@+id/cancel_button"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="取消保存"/>
        <Button
            android:id="@+id/commit_button"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="保存"
            android:textStyle="bold"/>
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>